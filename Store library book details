#include <stdio.h>

struct book {
    int bookId;
    char title[30];
    char author[30];
};

int main() {
    struct book b;

    printf("Enter book ID: ");
    scanf("%d", &b.bookId);

    printf("Enter book title: ");

    scanf("%s", b.title);

    printf("Enter author name: ");
    scanf("%s", b.author);

    printf("\nBook Details:\n");
    printf("ID: %d\nTitle: %s\nAuthor: %s",
           b.bookId, b.title, b.author);

    return 0;
}
output:
Enter book ID: 101
Enter book title: CProgramming
Enter author name: Dennis
Book Details:
ID: 101
Title: CProgramming
Author: Dennis



