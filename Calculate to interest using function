#include <stdio.h>

float calculateInterest(float p, float r, float t) {
    return (p * r * t) / 100;
}

int main() {
    float p, r, t, si;

    printf("Enter principal, rate and time: ");
    scanf("%f %f %f", &p, &r, &t);

    si = calculateInterest(p, r, t);
    printf("Simple Interest = %.2f", si);

    return 0;
}
output:
Enter principal, rate and time: 1000 5 2
Simple Interest = 100.00
