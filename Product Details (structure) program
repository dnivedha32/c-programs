#include <stdio.h>

struct product {
    int pid;
    char pname[20];
    float price;
};

int main() {
    struct product p;

    printf("Enter product ID: ");
    scanf("%d", &p.pid);

    printf("Enter product name: ");
    scanf("%s", p.pname);

    printf("Enter price: ");
    scanf("%f", &p.price);

    printf("\nProduct Details:\n");
    printf("ID: %d\nName: %s\nPrice: %.2f",
           p.pid, p.pname, p.price);

    return 0;
}
output:
Enter product ID: 301
Enter product name: Laptop
Enter price: 45000
Product Details:
ID: 301
Name: Laptop
Price: 45000.00


