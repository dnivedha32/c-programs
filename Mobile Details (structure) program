#include <stdio.h>

struct mobile {
    char brand[20];
    char model[20];
    float price;
};

int main() {
    struct mobile m;

    printf("Enter brand: ");
    scanf("%s", m.brand);

    printf("Enter model: ");
    scanf("%s", m.model);

    printf("Enter price: ");
    scanf("%f", &m.price);

    printf("\nMobile Details:\n");
    printf("Brand: %s\nModel: %s\nPrice: %.2f",
           m.brand, m.model, m.price);

    return 0;
}
output:
Enter brand: Samsung
Enter model: GalaxyA14
Enter price: 18000
Mobile Details:
Brand: Samsung
Model: GalaxyA14
Price: 18000.00

