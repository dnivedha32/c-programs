#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char password[50];
    int i, hasDigit = 0;

    printf("Enter password: ");
    scanf("%s", password);

    // Check for at least one digit
    for (i = 0; password[i] != '\0'; i++) {
        if (isdigit(password[i])) {
            hasDigit = 1;
            break;
        }
    }

    if (strlen(password) >= 8 && hasDigit)
        printf("Password is valid");
    else
        printf("Password is invalid");

    return 0;
}
output:
Enter password: Student123
Password is valid

