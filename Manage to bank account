#include <stdio.h>

struct bank {
    int accNo;
    char name[20];
    float balance;
};

int main() {
    struct bank b;

    printf("Enter account number: ");
    scanf("%d", &b.accNo);

    printf("Enter account holder name: ");
    scanf("%s", b.name);

    printf("Enter balance: ");
    scanf("%f", &b.balance);

    printf("\nBank Account Details:\n");
    printf("Account Number: %d\n", b.accNo);
    printf("Name: %s\n", b.name);
    printf("Balance: %.2f\n", b.balance);

    return 0;
}
output:
Enter account number: 12345
Enter account holder name: Kumar
Enter balance: 15000

Bank Account Details:
Account Number: 12345
Name: Kumar
Balance: 15000.00

output:

