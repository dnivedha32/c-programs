#include <stdio.h>

int main() {
    char str[100];
    int count = 0;

    printf("Enter a string: ");
    scanf("%s", str);

    while (str[count] != '\0') {
        count++;
    }

    printf("Number of characters = %d", count);

    return 0;
}
output:
Enter a string: Hello
Number of characters = 5


